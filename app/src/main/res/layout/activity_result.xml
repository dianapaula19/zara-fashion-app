<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.zarafashion.ResultActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
        android:id="@+id/id_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/glamour_regular"
        android:text="Bohemian"
        android:textColor="@color/colorBackground"
        android:textSize="50sp" />

    <ImageView
        android:id="@+id/id_result_image"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_below="@+id/id_result"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/bohemian_style" />

    <Button
        android:id="@+id/button_retake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_result_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="onClick1"
        android:text="@string/retake"
        android:textSize="25sp" />
    </RelativeLayout>

</ScrollView>
